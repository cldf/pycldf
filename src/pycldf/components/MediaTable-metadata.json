{
  "url": "media.csv",
  "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#MediaTable",
  "tableSchema": {
    "columns": [
      {
        "name": "ID",
        "required": true,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#id",
        "datatype": {
          "base": "string",
          "format": "[a-zA-Z0-9_\\-]+"
        }
      },
      {
        "name": "Name",
        "required": false,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#name",
        "datatype": "string"
      },
      {
        "name": "Description",
        "required": false,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#description",
        "datatype": "string"
      },
      {
        "name": "Media_Type",
        "required": true,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#mediaType",
        "datatype": {"base": "string", "format": "[^/]+/.+"}
      },
      {
        "name": "Download_URL",
        "required": false,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#downloadUrl",
        "datatype": {"base": "anyURI"}
      },
      {
        "name": "Path_In_Zip",
        "required": false,
        "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#pathInZip",
        "datatype": "string"
      }
    ]
  }
}
